{
  "name": "@wopr-network/wopr-plugin-skills",
  "version": "1.0.0",
  "description": "Skills discovery, state management, and REST API for WOPR",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check --config-path=. src/",
    "lint:fix": "biome check --config-path=. --fix src/",
    "format": "biome format --config-path=. --write src/",
    "check": "biome check --config-path=. src/ && tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "wopr",
    "plugin",
    "skills",
    "ai",
    "automation"
  ],
  "author": "WOPR",
  "license": "MIT",
  "dependencies": {
    "@wopr-network/plugin-types": "^0.2.0",
    "hono": "^4.7.12",
    "winston": "^3.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^25.2.3",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "undici": "6.23.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ]
}
